<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <requestFocus />
    </LinearLayout>

    <org.denevell.droidnatch.app.views.EditTextHideKeyboard
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:imeOptions="actionDone"
        android:ems="10"
        android:inputType="textCapSentences" 
        android:contentDescription="addthread_edittext" 
        />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/editText1"
        android:contentDescription="listthreads_listview" 
        />

    <include
        android:contentDescription="listthreads_loading_view"
        android:id="@+id/list_threads_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/list_threads_loading_page">
    </include>

</RelativeLayout>