    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="?android:attr/buttonBarStyle"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <requestFocus />
        </LinearLayout>

        <org.denevell.droidnatch.app.views.LaunchActivityFromOptionMenuActivator
            android:layout_width="0dp"
            android:layout_height="0dp"
           	app:fragment_class="org.denevell.droidnatch.settings.SettingsActivity"
           	app:option_menu_item_for_fragment_opener="@+id/threads_option_menu_settings"
             />

        <org.denevell.droidnatch.app.views.DialoguePopupOnMenuActivator
            android:layout_width="0dp"
            android:layout_height="0dp"
           	app:dialogue_layout="@layout/register_dialogue_layout"
           	app:option_menu_item="@+id/threads_option_menu_register"
             />

        <org.denevell.droidnatch.app.views.DialoguePopupOnMenuActivator
            android:layout_width="0dp"
            android:layout_height="0dp"
           	app:dialogue_layout="@layout/login_dialogue_layout"
           	app:option_menu_item="@+id/threads_option_menu_login"
             />

        <org.denevell.droidnatch.app.views.DialoguePopupOnMenuActivator
            android:layout_width="0dp"
            android:layout_height="0dp" 
           	app:dialogue_layout="@layout/add_thread_dialogue_layout"
           	app:option_menu_item="@+id/threads_option_menu_add_thread"
            />

        <org.denevell.droidnatch.threads.list.uievents.LongClickDeleteActivator
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <org.denevell.droidnatch.threads.list.uievents.ListThreadsViewStarter
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <org.denevell.droidnatch.app.views.ReceivingClickingAutopaginatingListView
            android:id="@+id/list_threads_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:contentDescription="listthreads_listview"
            tools:ignore="HardcodedText" />

        <include
            android:id="@+id/list_threads_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/list_threads_loading_page"
            android:contentDescription="listthreads_loading_view"
            tools:ignore="HardcodedText" >

        </include>

    </RelativeLayout>



