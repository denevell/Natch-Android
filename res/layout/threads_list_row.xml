<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="@drawable/item_highlight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/list_thread_row_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:lines="2"
        android:contentDescription="list_threads_row"
        android:ellipsize="end"
        android:textColor="@color/normal_text_light"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/list_thread_row_author_date_linearlayout"
        android:layout_below="@id/list_thread_row_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_thread_row_author_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="list_threads_row_author"
            android:text="author"
	        android:textColor="@color/normal_text_light"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/list_thread_row_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="list_threads_row_date"
	        android:textColor="@color/normal_text_light"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>